{
    "name": "Cute Pet Pictures",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "This addon shows you a random picture of a pet from Pexels by clicking it (also has a Reload button for getting a new image)",
    "icons": {
        "32": "icons/ppicon_32x32.png",
        "48": "icons/ppicon_48x48.png",
        "64": "icons/ppicon_64x64.png",
        "128": "icons/ppicon_128x128.png"
    },
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
              "<all_urls>"
            ]
        }
    ]
}
